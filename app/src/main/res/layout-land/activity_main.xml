<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/drawer_layout"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:fitsSystemWindows="true" tools:openDrawer="start">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools">
        <RelativeLayout
            android:id="@+id/main_screen_navbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/default_blue">
            <RelativeLayout
                android:id="@+id/main_screen_menu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/menu_icon"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/main_screen_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/arrow_left"
                    android:tint="@android:color/white"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp">
                <RelativeLayout
                    android:id="@+id/send"
                    android:layout_width="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="30dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/send"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/main_screen_friend"
                    android:layout_width="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_height="30dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/friend_icon"
                        android:layout_centerInParent="true"/>
                    <RelativeLayout
                        android:id='@+id/incoming_fr'
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:background="@drawable/circle_red"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true">
                        <TextView
                            android:id="@+id/incoming_fr_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="3dp"
                            android:text="1"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/main_screen_addtarget"
                    android:layout_width="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_height="30dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/addtarget_icon"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/main_screen_running"
                    android:layout_width="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_height="30dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/timer_white"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/main_screen_settings"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/settings"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>
            <com.lb.auto_fit_textview.AutoResizeTextView
                android:id="@+id/main_screen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/settings"
                android:textColor="#FFF"
                android:textSize="22sp"/>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/main_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_screen_navbar"/>

        <RelativeLayout
            android:id="@+id/blackout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#88000000">
            <!--<RelativeLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="#FFF"-->
                <!--android:layout_centerInParent="true">-->
            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                style="?android:attr/progressBarStyleLarge"
                android:layout_margin="20dp"
                android:indeterminate="true"
                android:layout_centerInParent="true"
                />
            <!--</RelativeLayout>-->
        </RelativeLayout>
    </RelativeLayout>


    <ListView android:id="@+id/nav_view"
        android:layout_width="300dp" android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFF"/>

</android.support.v4.widget.DrawerLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/feed_item_bottom_bar">
            <ImageView
                android:id="@+id/feed_item_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/temp_profile"/>
            <TextView
                android:id="@+id/feed_item_feed"
                android:layout_toEndOf="@+id/feed_item_profile"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/dark_grey"
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_marginEnd="15dp"/>
            <LinearLayout
                android:id="@+id/feed_item_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@+id/feed_item_profile"
                android:layout_marginEnd="5dp"
                android:weightSum="4"
                android:visibility="gone">
                <TextView
                    android:id="@+id/feed_item_hide_post"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:textColor="@color/dark_grey"
                    android:text="@string/hide_post"/>
                <LinearLayout
                    android:id="@+id/feed_item_selfpost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.86"
                    android:weightSum="2.86">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.13"
                        android:src="@drawable/separator"/>
                    <TextView
                        android:id="@+id/feed_item_hide_friend"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:textColor="@color/dark_grey"
                        android:text="@string/hide_friend"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.13"
                        android:src="@drawable/separator"/>
                    <TextView
                        android:id="@+id/feed_item_delete_friend"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:gravity="center"
                        android:textColor="@color/dark_grey"
                        android:text="@string/delete_friend"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/feed_item_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:scaleType="centerInside"
                android:src="@drawable/x"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/feed_item_bottom_bar"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="40dp"
            android:background="#FFF">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:src="@drawable/clock"/>
            <TextView
                android:id="@+id/feed_item_time_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/dark_grey"
                android:layout_marginStart="35dp"/>
            <RelativeLayout
                android:id="@+id/feed_item_option"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="6dp"
                    android:src="@drawable/repor"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/feed_item_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="18dp"
                    android:src="@drawable/share"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/share_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:visibility="gone"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:id="@+id/facebook_btn"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/facebook_color"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/twitter_btn"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/twitter_color"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/mail_btn"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/email_color"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>